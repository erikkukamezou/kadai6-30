<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>

<% @user.tasks.each do |task| %>
<p>名前: <%= task.name %></p>
<p>詳細: <%= task.detail %></p>
<p>終了期限:<%= task.limit %></p>
<% end %>


<%= link_to '新規作成', new_task_path %>
<%= link_to '一覧に戻る', tasks_path %>
<%= link_to '管理者画面にもどる', admin_users_path %>
