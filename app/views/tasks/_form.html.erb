<%= form_with(model: @task, local: true) do |form| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="task_name">
    <%= form.label :名前 %>
    <%= form.text_field :name %>
  </div>
  <div class="task_detail">
    <%= form.label :詳細 %>
    <%= form.text_field :detail %>
  </div>
  <div class="task_limit">
    <%= form.label :終了期限 %>
    <%= form.date_field :limit %>
  </div>
  <div class="task_status">
    <%= form.label :今の状況 %>
    <%= form.select :status, Task.statuses.keys %>
    <%#= form.select :status,[["未着手","未着手"],["着手","着手"],["完了","完了"]],
    include_blank: "選択して下さい" %>
  </div>
  <div class="task_priority">
    <%= form.label :優先順位 %>
    <%= form.select :priority, Task.priorities.keys %>
  </div>

  <div class="task_label">
    <%= form.label :ラベルをつける %>
    <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
  </div>
  <%= form.submit  name='登録'%>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>
