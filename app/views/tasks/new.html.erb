<%= form_with(model: @task) do |form| %>
  <div class="task_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="task_detail">
    <%= form.label :detail %>
    <%= form.text_field :detail %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>
